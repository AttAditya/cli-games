# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
end_of_line = lf
charset = utf-8

[*.json]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = false

[*.js]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.sh]
indent_style = tab
indent_size = 4
insert_final_newline = true
